<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>商品列表</title>
    <link rel="stylesheet" href="/css/Universal.css">
    <link rel="stylesheet" href="/css/index.css">
    <style>
        .carousel {
            position: relative;
            width: 100%;
            height: 300px;
            overflow: hidden;
            border: 1px solid #ddd;
        }
        .carousel-images {
            display: flex;
            transition: transform 0.5s ease;

            .carousel-item {
                width: 100vw;
            }
        }
        .carousel-images img {
            width: 100vw;
            object-fit: cover;
            height: 100%;
        }
        .carousel-controls {
            position: absolute;
            top: 50%;
            width: 100%;
            display: flex;
            justify-content: space-between;
            transform: translateY(-50%);
        }
        .carousel-controls button {
            background-color: rgba(0, 0, 0, 0.5);
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
        }
    </style>
</head>
<body>

<header>
    <nav>
        <div class="logo"><a href="/">logo</a></div>
        <ul>
            <li><a href="/cart">购物车</a></li>
            <li><a href="/">用户</a></li>
            <li><a href="/">设置</a></li>
        </ul>
    </nav>
</header>

<!-- 轮播图 -->
<section class="carousel">
    <div class="carousel-images">
        <% products.forEach(product => { %>
            <div class="carousel-item">
                <img src="/images/<%= product.image %>" alt="<%= product.name %>">
            </div>
        <% }) %>
    </div>
    <div class="carousel-controls">
        <button id="prevBtn">&#10094;</button>
        <button id="nextBtn">&#10095;</button>
    </div>
</section>

<main>
    <h1>商品列表</h1>
    <ul>
        <% products.forEach(product => { %>
            <li>
                <div class="Shopping-content">
                    <div style="overflow: hidden">
                        <!-- 商品图片 -->
                        <img src="/images/<%= product.image %>" alt="<%= product.name %>"/>
                    </div>
                    <!-- 商品名称和价格 -->
                    <strong><%= product.name %></strong>  $<%= product.price %>
                </div>
                <!-- 加入购物车按钮 -->
                <form action="/add-to-cart" method="POST" class="Shopping-column">
                    <input type="hidden" name="product_id" value="<%= product.id %>">
                    <input type="number" name="quantity" style="text-align: center" value="1" min="1" required>
                    <button type="submit">加入购物车</button>
                </form>
            </li>
        <% }) %>
    </ul>
</main>

<footer>
    <p>&copy; 2025 <strong>购物网站</strong>. 版权所有xxx | <a href="#">隐私政策</a> | <a href="#">服务条款</a></p>
</footer>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const addToCartButtons = document.querySelectorAll('form button[type="submit"]');
        addToCartButtons.forEach(button => {
            button.addEventListener('click', function (event) {
                event.preventDefault();
                const form = button.closest('form');
                const quantityInput = form.querySelector('input[name="quantity"]');
                const quantity = quantityInput.value;
                const productIdInput = form.querySelector('input[name="product_id"]');
                const productId = productIdInput.value;
                form.submit();
                alert(`成功添加 ${quantity} 个 商品${productId} 到购物车！`);
            });
        });

        // 轮播图的功能
        let currentSlide = 0;
        const slides = document.querySelectorAll('.carousel-item');
        const totalSlides = slides.length;
        const carouselImages = document.querySelector('.carousel-images');

        function showSlide(index) {
            if (index < 0) index = totalSlides - 1;
            if (index >= totalSlides) index = 0;
            carouselImages.style.transform = `translateX(-${index * 100}%)`;
            currentSlide = index;
        }

        document.getElementById('prevBtn').addEventListener('click', function() {
            showSlide(currentSlide - 1);
        });

        document.getElementById('nextBtn').addEventListener('click', function() {
            showSlide(currentSlide + 1);
        });

        // 自动轮播
        setInterval(() => {
            showSlide(currentSlide + 1);
        }, 3000); // 每3秒自动切换
    });
</script>

</body>
</html>
